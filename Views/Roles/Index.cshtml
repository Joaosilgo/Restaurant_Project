
@model retaurant_info.Controllers.RolesController.DisplayViewModel





@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<h2>Create User</h2>
<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Roles" asp-action="CreateUser" method="post">


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" value="" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>


        <div class="col-md-4">

            @foreach (var user in Model.Users)
            {
                <div class="card p-3  text-muted bg-white rounded">
                    <div class="card-body">
                        <p class="lead"> @user.Email</p>

                    </div>
                </div>
            }

        </div>





    </div>
    <hr />
</div>




<partial name="_CreateRole" model="new  retaurant_info.Controllers.RolesController.RoleViewModel()"/>


    <hr />
    <div>
        <partial name="_AddUserToRole" model="new retaurant_info.Controllers.RolesController.UpdateUserRoleViewModel() { Users = Model.Users, Roles = Model.Roles }">
    </div>

    <hr />

    <div>
        <div>
            <h2>Role List</h2>

            @foreach (var role in Model.Roles)
            {
                <div class="card p-3  text-muted bg-white rounded">
                    <div class="card-body">
                        <p class="lead"> @role</p>

                    </div>
                </div>
            }

            <br />

            <h2>Users Role List</h2>

            @foreach (var users in Model.Users)
            {
                @if (users.Roles.Count() > 0)
                {
                    <div class="card p-3  text-muted bg-white rounded">
                        <div class="card-body">
                            <h5 class="card-title">@users.Email</h5>


                            @foreach (var item in users.Roles.ToList())
                            {
                                <p class="lead"> @item.Id</p>
                                <p class="lead"> @item.Name</p>

                            }



                        </div>
                    </div>
                }
            }






        </div>
    </div>
